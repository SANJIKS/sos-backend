# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.production

# Database
DB_NAME=sos_kg_prod
DB_USERNAME=sos_kg_user
DB_PASSWORD=your-strong-db-password
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Email (configure for your SMTP server)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Salesforce (configure with your credentials)
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token
SALESFORCE_DOMAIN=login

# FreedomPay (configure with your credentials)
FREEDOMPAY_MERCHANT_ID=your-merchant-id
FREEDOMPAY_SECRET_KEY=your-secret-key
FREEDOMPAY_BASE_URL=https://api.freedompay.kg

# Security
ALLOWED_HOSTS=api.sos-kyrgyzstan.org,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://api.sos-kyrgyzstan.org,https://sos-kyrgyzstan.org

# Site Settings
SITE_URL=https://api.sos-kyrgyzstan.org
FRONTEND_URL=https://sos-kyrgyzstan.org
FREEDOMPAY_WEBHOOK_URL=https://api.sos-kyrgyzstan.org/api/v1/donations/freedompay/webhook/

# Two-Factor Authentication
TWO_FACTOR_ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Redis Settings
REDIS_PASSWORD=your-redis-password

# Google reCAPTCHA v2 Settings
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
SKIP_RECAPTCHA_IN_DEBUG=False

# Static and Media
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media


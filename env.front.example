# Django Settings
DEBUG=False
SECRET_KEY=your-production-secret-key-change-this
DJANGO_SETTINGS_MODULE=config.settings.production

# Database Settings
DB_NAME=sos_kg_db
DB_USERNAME=postgres
DB_PASSWORD=your-strong-db-password
DB_HOST=db
DB_PORT=5432

# Email Settings (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@sos-kyrgyzstan.org

# Site Settings
SITE_URL=https://api.sos-kyrgyzstan.org
ALLOWED_HOSTS=api.sos-kyrgyzstan.org,sos-kyrgyzstan.org,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://api.sos-kyrgyzstan.org,https://sos-kyrgyzstan.org
FRONTEND_URL=https://sos-kyrgyzstan.org

# Two-Factor Authentication
TWO_FACTOR_ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Redis Settings
REDIS_PASSWORD=your-redis-password

# FreedomPay Settings
FREEDOMPAY_BASE_URL=https://api.freedompay.kg
FREEDOMPAY_MERCHANT_ID=your-real-merchant-id-from-freedompay-kg
FREEDOMPAY_SECRET_KEY=your-real-secret-key-from-freedompay-kg
FREEDOMPAY_TEST_MODE=False
FREEDOMPAY_MOCK_MODE=False
FREEDOMPAY_CLIENT_IP=your-server-public-ip
FREEDOMPAY_WEBHOOK_URL=https://api.sos-kyrgyzstan.org/api/v1/donations/freedompay/webhook/

# Google reCAPTCHA v2 Settings
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
SKIP_RECAPTCHA_IN_DEBUG=False

# Frontend Settings (Next.js)
NEXT_PUBLIC_API_URL=https://api.sos-kyrgyzstan.org
NODE_ENV=production

